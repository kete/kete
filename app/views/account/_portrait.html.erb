<div id="image_<%= portrait.id -%>" class="portrait_image">
  <% image_title = (params[:controller] == 'images') ? nil : t('account.portrait.title') -%>
  <%= link_to image_tag(portrait.thumbnail_file.public_filename,
                        { :width => 50, :height => 50, :alt => "#{altify(portrait.title)}", :title => image_title }),
                        { :urlified_name => portrait.basket.urlified_name,
                          :controller => 'images',
                          :action => 'show',
                          :id => portrait.id } -%>
  <%= render :partial => 'account/portrait_controls', :locals => { :portrait => portrait } -%>
</div>
