%tr
  %td
    %h4= t 'topic_types.available_fields_form.title'
    - if local_id == 1
      %p= t 'topic_types.available_fields_form.no_more_allowed'
    - else
      - @available_fields = TopicType.find(local_id).available_fields
      - if @available_fields.size > 0
        = form_tag :action =>                    |
          :add_to_item_type, :id => local_id  do |
          - for @extended_field in @available_fields
            %p
              = h(@extended_field.label)
              - if !@extended_field.xml_element_name.blank?
                - if !@extended_field.xsi_type.blank?
                  (#{h("#{@extended_field.xml_element_name} xsi:type=\"#{@extended_field.xsi_type}\"")})
                - else
                  (#{h(@extended_field.xml_element_name)})
              = t('topic_types.available_fields_form.multiple') if @extended_field.multiple?
              \:
              %br/
              %label
                = t 'topic_types.available_fields_form.optional'
                = check_box("extended_field[]", 'add_checkbox')
              %label
                = t 'topic_types.available_fields_form.required'
                = check_box("extended_field[]", 'required_checkbox')
          .wrap= submit_tag t('topic_types.available_fields_form.add')
      - else
        %p= t 'topic_types.available_fields_form.no_fields_available'
