- if current_user_can_see_private_files_for?(item)
  %p
    = t 'documents.details.filename'
    = item.filename
    = link_to_original_of item
  %p
    = t 'documents.details.size'
    = number_to_human_size(item.size)
  %p
    = t 'documents.details.type'
    = item.content_type
    ( #{link_to(t('documents.details.replace_description'), :action => 'convert', :id => item, :private => params[:private]) if ok_to_convert_to_description?(item)} )
- else
  %p
    = t 'documents.details.filename'
    ( #{t 'documents.details.not_available'} )
