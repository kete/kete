.generic-result-related
  = t('search.related.title')

  = related_items_summary

  - if related && related[:still_images].present?
    .topic-result-related-images
      = topic_related_thumbs_from(related[:still_images],
                                  :link_to => source_url,
                                  :locally_hosted => locally_hosted,
                                  :title => t('search.related.more_on', :title => title),
                                  :tabindex => '1' )
%div{:style => "clear:left;"}
