<% if current_user_can_see_private_files_for?(item) -%>
  <p><%=t 'video.details.filename' %> <%= item.filename %> (<%= link_to_original_of item -%>)</p>
  <p><%=t 'video.details.size' %> <%= number_to_human_size(item.size) %></p>
  <p><%=t 'video.details.type' %> <%= item.content_type %></p>
<% else -%>
  <p><%=t 'video.details.filename' %> ( <%=t 'video.details.not_available' %> )
<% end -%>
