- if @type != 'categories'
  - @title = t('tags.list.title')
- else
  - @title = @type.capitalize

#content-tabs
  = render :partial => "tags/tag_order_buttons"

#content-wrapper{class: (defined?(style_classes) ? style_classes : '')}
  = render "basket_navigation_menu" if show_basket_list_naviation_menu?
  #main-content-wrapper
    #main-content-container
      %a{:name => "main-content"}

        %h2
          = @title
          %img#data_spinner{:alt => t('tags.list.retrieving_tags'), :height => "16", :src => image_path('indicator.gif'), :style => "display:none;", :width => "16"}
        #tags_list
          = render :partial => 'tags/tags_list', :locals => { :tags => @tags }

