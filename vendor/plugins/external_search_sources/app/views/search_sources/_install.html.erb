<div class="active-scaffold-header">
  <h2><%= t('search_sources.install.title') %></h2>

  <% form_tag :action => 'install_search_source' do %>

    <%= select_tag 'task', options_for_select([[t('search_sources.install.choose_search_source'), '']] +
                                              @available_search_sources.collect { |v| [v.humanize, v] }) %>

    <div id="api_key_div" style="display:none;">
      <label><%=t 'search_sources.install.dnz_api_key' %></label>
      <%= text_field_tag 'api_key' %>
      (<%= link_to t('search_sources.install.no_dnz_api_key'), 'http://www.digitalnz.org/dashboard/api_key', { :style => 'font-size: 70%;' } %>)
    </div>

    <%= submit_tag t('search_sources.install.submit') %>

  <% end %>

  <%= javascript_tag "$('task').observe('change', function(event) {
    if ($('task').value.match(/dnz/i)) { $('api_key_div').show(); } else { $('api_key_div').hide(); }
  });"%>
</div>

<br />